<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_test_dlopen"
        android:text="测试查找dlopen实现"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跨本机命名空间注册函数"
        android:id="@+id/btn_register"/>

    <Button
        android:id="@+id/btn_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调用跨命名空间注册函数"
        />
    <Button
        android:id="@+id/btn_find_classloader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认命名空间查找ClassLoader命名空间"/>
    <Button
        android:id="@+id/btn_call_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="solist和动态库查找测试"
        />


</LinearLayout>